        // switch
        let day = 5
        let dayName

        switch(day){
            case 0:
                dayName = "Lunes"
                break
            case 1:
                dayName = "Martes"
                break
            case 2:
                dayName = "Miercoles"
                break
            case 3:
                dayName = "Jueves"
                break
            case 4:
                dayName = "Viernes"
                break
            case 5:
                dayName = "Sabado"
                break
            case 6:
                dayName = "Domingo"
                break
            default: 
                dayName ="No hay tantos dÃ­as"
        }
        console.log(dayName);
        

